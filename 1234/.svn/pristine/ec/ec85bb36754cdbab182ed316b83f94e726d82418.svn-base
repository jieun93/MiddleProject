    @FXML
    void label_auction_clicked(MouseEvent event) {

    	Stage stage = (Stage)btn_login.getScene().getWindow();
    	if(Session.loginUser==null) {
    		if(AlertUtil.showAlert(stage,"로그인이 필요합니다.", "경매참여는 회원만 가능합니다.", "로그인", "취소")) {
    			try {
    				FXMLLoader loader = new FXMLLoader(MainPageController.class.getResource("../../fxml/login/Login.fxml"));
    				Parent root =loader.load();			
    				Scene scene = new Scene(root);
    				stage.setScene(scene);
    				stage.setTitle("로그인");
    				stage.show();
    			} catch (IOException e) {
    				e.printStackTrace();
    			}
    		}
    	}else {
    		Stage dialog = new Stage();
    		dialog.initModality(Modality.WINDOW_MODAL);
    		dialog.initOwner(stage);
    		
        	
    		try {
    			Parent root = FXMLLoader.load(KnowledgeMain.class.getResource("../../fxml/auction/AuctionMain.fxml"));
    			Scene scene = new Scene(root);
    			dialog.setScene(scene);
    			dialog.show();
    		} catch (IOException e) {
    			// TODO Auto-generated catch block
    			e.printStackTrace();
    		}
    	}
    	
    }

